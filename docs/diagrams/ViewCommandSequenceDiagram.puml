@startuml ViewCommandSequenceDiagram
' --- styling: no link styling, wider group headers, longer labels ---
skinparam hyperlinkColor Black
skinparam hyperlinkUnderline false
skinparam maxMessageSize 120
skinparam GroupPadding 14
skinparam SequenceGroupFontSize 14
skinparam ParticipantPadding 30

actor User
participant ":BusyBreak" as BusyBreak
participant ":View" as View
participant ":Ui" as Ui

User -> BusyBreak: view <YYYY-MM-DD>
activate BusyBreak

BusyBreak -> View: viewInput(userInputArray)
activate View

alt [args.length\n!= 2]
  View -> Ui: showInvalidViewFormat()
  activate Ui
  Ui -> User: "Invalid command format"
  Ui --> View
  deactivate Ui
  View --> BusyBreak
  deactivate View
  BusyBreak --> User
  deactivate BusyBreak
  return
else [args.length\n== 2]
  View -> View: validateDate(dateStr)

  alt [invalid\ndate]
    View -> Ui: showInvalidDate(dateStr)
    activate Ui
    Ui -> User: "Invalid date"
    Ui --> View
    deactivate Ui
    View --> BusyBreak
    deactivate View
    BusyBreak --> User
    deactivate BusyBreak
    return
  else [valid\ndate]
    View -> BusyBreak: isItineraryEmpty()
    activate BusyBreak
    BusyBreak --> View: boolean
    deactivate BusyBreak

    alt [empty]
      View -> Ui: showEmptyItinerary()
      activate Ui
      Ui -> User: "Itinerary is empty"
      Ui --> View
      deactivate Ui
    else [not empty]
      View -> BusyBreak: getActivitiesOn(date)
      activate BusyBreak
      BusyBreak --> View: matches
      deactivate BusyBreak

      alt [matches.\nisEmpty()]
        View -> Ui: showNoActivi

